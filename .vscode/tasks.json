{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker Compose Up",
      "type": "shell",
      "command": "docker compose up --build",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Docker Compose Down",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": []
    },
    {
      "label": "Dev: Postgres",
      "type": "shell",
      "command": "docker compose -f docker-compose.dev.yml up --build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: Backend",
      "type": "shell",
      "command": "uv run uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Dev: Full Stack",
      "dependsOn": ["Dev: Postgres", "Dev: Backend", "Dev: Frontend"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Dev: Stop Postgres",
      "type": "shell",
      "command": "docker compose -f docker-compose.dev.yml down",
      "problemMatcher": []
    }
  ]
}
